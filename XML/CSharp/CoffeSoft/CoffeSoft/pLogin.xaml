<Page x:Class="CoffeSoft.pLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeSoft"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pLogin">

    <StackPanel HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <Label Content="Đăng nhập"
               HorizontalAlignment="Center"
               FontSize="20"
               Foreground="Green"/>
        <StackPanel Orientation="Horizontal"
                    Margin="5">
            <Label Content="Tên đăng nhập: " Width="100"/>
            <TextBox Name="txtUser" Width="150"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Mật khẩu: " Width="100"/>
            <TextBox Name="txtPass" Width="150"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="" Width="100"/>
            <Button Name="btnLogin" Width="150"
                    Background="OrangeRed"
                    Foreground="White"
                    Click="BtnLogin_Click"
                    Content="Đăng nhập"/>
        </StackPanel>
    </StackPanel>
</Page>
